{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/day-01-users-module",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/day-01-users-module/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/day-01-users-module",
  "projects": {
    "day-01-users-module": {
      "type": "application",
      "root": "apps/day-01-users-module",
      "entryFile": "main",
      "sourceRoot": "apps/day-01-users-module/src",
      "compilerOptions": {
        "tsConfigPath": "apps/day-01-users-module/tsconfig.app.json"
      }
    },
    "day-02-auth-module": {
      "type": "application",
      "root": "apps/day-02-auth-module",
      "entryFile": "main",
      "sourceRoot": "apps/day-02-auth-module/src",
      "compilerOptions": {
        "tsConfigPath": "apps/day-02-auth-module/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}